<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:usercontrols="clr-namespace:Music_Player.Views.UserControls"
             x:Class="Music_Player.Views.UserControls.SongsView">
  <ContentView.Content>
    <ListView x:Name="lvTracks" ItemsSource="{Binding Tracks}" RowHeight="65">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <usercontrols:SmallTrackView Track="{Binding This}" Tapped="TrackView_Tapped" OptionsTapped="_OptionsTapped"/>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </ContentView.Content>
</ContentView>