<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:usercontrols="clr-namespace:Music_Player.Views.UserControls"
             x:Class="Music_Player.Views.UserControls.SongsView">
  <ContentView.Content>
    <StackLayout>
      <ActivityIndicator x:Name="activityIndicator" VerticalOptions="CenterAndExpand" IsVisible="False"/>
      <Label x:Name="lblNoTracks" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Text="Feels empty here without any songs.." IsVisible="False"/>
      <ListView x:Name="lvTracks" ItemsSource="{Binding Tracks}" RowHeight="69" SeparatorVisibility="None">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <usercontrols:SmallTrackView Track="{Binding .}" Tapped="TrackView_Tapped" OptionsTapped="_OptionsTapped"/>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ContentView.Content>
</ContentView>