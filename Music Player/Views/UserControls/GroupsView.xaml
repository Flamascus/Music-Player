<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Music_Player.Views.UserControls.GroupsView">
  <ContentView.Content>
    <StackLayout>
      <ActivityIndicator x:Name="activityIndicator" VerticalOptions="CenterAndExpand" IsVisible="False"/>
      <ListView x:Name="lvGroups" ItemsSource="{Binding Groups}" RowHeight="60" ItemTapped="lvItemTapped">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding Name}" TextColor="{StaticResource Text}"
                              Detail="{Binding TrackAmountUi}" DetailColor="{StaticResource Front}"/>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ContentView.Content>
</ContentView>