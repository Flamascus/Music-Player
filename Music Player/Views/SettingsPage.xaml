<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Music_Player.ViewModels"
             x:Class="Music_Player.Views.SettingsPage"
             BackgroundColor="{StaticResource Back}"           
             Title="Settings">
  
  <ContentPage.BindingContext>
    <viewmodels:SettingsViewModel x:Name="ViewModel"/>
  </ContentPage.BindingContext>

  <ContentPage.Content>
    <StackLayout>
      <TableView>
        <TableRoot>
          <TableSection Title="Settings">
            <TextCell Text="Info: Applying settings needs app restart atm" TextColor="{x:StaticResource Text}"/>
            <TextCell Text="Music Directory:" Detail="{Binding MusicDirectory}" Tapped="_SelectFolderClicked"/>
            <EntryCell Label="Music Directory:" Placeholder="DirectoryPath" Text="{Binding MusicDirectory}"/>
            <SwitchCell Text="Send crash-reports (this helps me alot!)" On="{Binding SendReportsEnabled}"/>
          </TableSection>
        </TableRoot>
      </TableView>
      <!--<Button Text="Pick Folder" Clicked="_SelectFolderClicked"/>
      <Switch OnColor="Gray" ThumbColor="{StaticResource Primary}"/>-->
    </StackLayout>
  </ContentPage.Content>
</ContentPage>